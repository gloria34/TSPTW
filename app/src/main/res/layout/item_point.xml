<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="point"
            type="dnu.fpm.tsptw.data.model.Point" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_10">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/InputLayout"
                android:hint="@string/latitude">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/latitude_edit_text"
                    style="@style/InputEditText"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:text="@{point.latitude.toString()}" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/InputLayout"
                android:layout_marginTop="@dimen/margin_10"
                android:hint="@string/longitude">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/longitude_edit_text"
                    style="@style/InputEditText"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:text="@{point.longitude.toString()}" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/InputLayout"
                android:layout_marginTop="@dimen/margin_10"
                android:hint="@string/time_from">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/time_from_edit_text"
                    style="@style/InputEditText"
                    android:focusable="false"
                    android:text="@{point.formattedTimeFrom()}" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/InputLayout"
                android:layout_marginTop="@dimen/margin_10"
                android:hint="@string/time_to">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/time_to_edit_text"
                    style="@style/InputEditText"
                    android:focusable="false"
                    android:text="@{point.formattedTimeTo()}" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>
</layout>