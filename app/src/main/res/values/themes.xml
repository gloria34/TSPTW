<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TSPTW" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/rose</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="background">@color/white</item>
        <item name="cardCornerRadius">@dimen/radius_10</item>
        <item name="cardBackgroundColor">@color/light_grey</item>
        <item name="cardElevation">0dp</item>
        <item name="iconTint">@color/dark_violet</item>
        <item name="strokeColor">@color/grey</item>
        <item name="editTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/dark_violet</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Title">
        <item name="fontFamily">@font/monserrat_extra_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Subtitle">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RegularText">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>